    "devDependencies": {
        "@testing-library/react-hooks": "^8.0.1",
        "@types/jest": "^29.0.3",
        "@types/react": "^18.0.21",
        "jest": "^29.0.3",
        "react": "^18.2.0",
        "react-test-renderer": "^18.2.0",
        "ts-jest": "^29.0.1",
        "ts-node": "^10.9.1",
        "typescript": "^4.8.3"
    }
