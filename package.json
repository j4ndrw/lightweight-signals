    "description": "A lightweight signal-based state management library. Heavily inspired by SolidJS.",
    "main": "dist",
    "types": "dist",
    "exports": {
        ".": {
            "require": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.js"
            },
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.js"
            }
        },
        "./core": {
            "require": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.js"
            },
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.js"
            }
        },
        "./react": {
            "require": {
                "types": "./dist/react/index.d.ts",
                "default": "./dist/react/index.js"
            },
            "import": {
                "types": "./dist/react/index.d.ts",
                "default": "./dist/react/index.js"
            }
        }
    },
    "repository": "git@github.com:j4ndrw/lightweight-signals.git",
